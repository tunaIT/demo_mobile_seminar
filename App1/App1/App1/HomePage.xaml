<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.HomePage">
    <ContentPage.Content>
        <StackLayout Padding="16">
            <Label Text="Welcome to the Home Page"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   VerticalOptions="Center" />

            <Label x:Name="nameLabel" FontSize="18" />
            <Label x:Name="emailLabel" FontSize="18" />
            <Label x:Name="balanceLabel" FontSize="18" />
            <Label x:Name="cardNumberLabel" FontSize="18" />
            <Label x:Name="bankLabel" FontSize="18" />
            <Label x:Name="createdLabel" FontSize="18" />
            <Label x:Name="updatedLabel" FontSize="18" />

            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
